<Window x:Class="Simulador_IA.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Simulador_IA"
        mc:Ignorable="d"
        Title="Simulator - Artificial Intelligence" Height="461.333" Width="351" WindowStyle="None">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="151*"/>
            <RowDefinition Height="268*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="118*"/>
            <ColumnDefinition Width="225*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="BTN_Start" Content="Start" Margin="10,0,10,82" Click="button_Click" BorderBrush="White" FontFamily="Open Sans" Foreground="White" FontSize="20" Height="36" VerticalAlignment="Bottom" Background="#FF134183" Grid.ColumnSpan="2" Grid.Row="1"/>
        <Label x:Name="LblTitle" Content="Agent Simulator" Margin="68,6,70,0" FontFamily="Open Sans" FontWeight="Bold" FontSize="24" Foreground="#FF134183" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Grid.ColumnSpan="2" Height="43" VerticalAlignment="Top"/>
        <Grid Margin="10,57,10,141" Grid.RowSpan="2" Grid.ColumnSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="67*"/>
                <RowDefinition Height="119*"/>
            </Grid.RowDefinitions>
            <Border BorderBrush="Black" BorderThickness="1" Margin="59,14,0,132" HorizontalAlignment="Left" Width="100" Grid.RowSpan="2"/>
            <Border BorderBrush="Black" BorderThickness="1" Margin="0,14,60,132" HorizontalAlignment="Right" Width="100" Grid.RowSpan="2"/>
            <Button x:Name="BTN_TrashA" Content="Button" Margin="91,0,0,86" BorderBrush="{x:Null}" Foreground="{x:Null}" RenderTransformOrigin="0.853,0.529" HorizontalAlignment="Left" Width="34" Height="34" VerticalAlignment="Bottom" Grid.Row="1">
                <Button.Background>
                    <ImageBrush ImageSource="trash.png"/>
                </Button.Background>
            </Button>
            <Button x:Name="BTN_TrashB" Content="Button" Margin="0,0,95,86" BorderBrush="{x:Null}" Foreground="{x:Null}" RenderTransformOrigin="0.853,0.529" HorizontalAlignment="Right" Width="34" Height="34" VerticalAlignment="Bottom" Grid.Row="1">
                <Button.Background>
                    <ImageBrush ImageSource="trash.png"/>
                </Button.Background>
            </Button>
            <Label x:Name="LBL_Legend" Content="Performance Rate" HorizontalAlignment="Center" Margin="15,0,5,20" Grid.Row="1" Foreground="#FF134183" FontFamily="Open Sans" FontWeight="Bold" Height="33" VerticalAlignment="Bottom" FontSize="16" Width="303" HorizontalContentAlignment="Center"/>
            <Label x:Name="LBL_PerformanceRate" Content="100" HorizontalAlignment="Left" Margin="10,0,0,5" Grid.Row="1" Foreground="#FF134183" FontFamily="Open Sans" Height="31" VerticalAlignment="Bottom" HorizontalContentAlignment="Center" Width="303" FontSize="16"/>
            <Label x:Name="label" Content="Throw" HorizontalAlignment="Right" Margin="0,71,193,0" Grid.Row="1" VerticalAlignment="Top" Height="23" Width="44"/>
            <Label x:Name="label_Copy" Content="Throw" HorizontalAlignment="Right" Margin="0,71,90,0" Grid.Row="1" VerticalAlignment="Top" Height="23" Width="44"/>
        </Grid>
        <Button x:Name="BTN_Close" Content="Close" Margin="10,0,10,4" Click="button_Click" BorderBrush="White" FontFamily="Open Sans" Foreground="#FF134183" FontSize="20" Background="{x:Null}" Grid.ColumnSpan="2" Grid.Row="1" Height="36" VerticalAlignment="Bottom"/>
        <Button x:Name="BTN_About" Content="About" Margin="10,0,10,43" Click="button_Click" BorderBrush="White" FontFamily="Open Sans" Foreground="#FF134183" FontSize="20" Background="{x:Null}" Grid.ColumnSpan="2" Grid.Row="1" Height="36" VerticalAlignment="Bottom"/>
        <Image x:Name="IMG_SectionA" HorizontalAlignment="Left" Height="72" Margin="84,76,0,0" VerticalAlignment="Top" Width="73" Grid.ColumnSpan="2" Source="vaccum.png"/>
        <Image x:Name="IMG_SectionB" HorizontalAlignment="Left" Height="72" Margin="68,76,0,0" VerticalAlignment="Top" Width="74" Grid.Column="1"/>
        <Image x:Name="IMG_TrashA" HorizontalAlignment="Left" Height="21" Margin="107,151,0,0" Grid.RowSpan="2" VerticalAlignment="Top" Width="21" Grid.ColumnSpan="2" Source="paper.png"/>
        <Image x:Name="IMG_TrashB" HorizontalAlignment="Left" Height="21" Margin="93,153,0,0" VerticalAlignment="Top" Width="21" Grid.Column="1" Grid.RowSpan="2"/>

    </Grid>
</Window>
